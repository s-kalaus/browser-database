{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "lib": ["es2015"],
        "allowJs": false,
        "declaration": true,
        "sourceMap": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "types": [
            "jasmine",
            "uuid"
        ]
    },
    "include": [
        "node_modules/@types",
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}